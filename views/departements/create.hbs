<div class="form-container">
    <h1>Créer un département</h1>

    {{#if error}}
    <div class="alert alert-error">{{error}}</div>
    {{/if}}

    <form action="/departements/create" method="POST" class="form-horizontal">
        <div class="form-group">
            <label for="code">Code :</label>
            <input type="text" id="code" name="code" value="{{data.code}}" required>
        </div>

        <div class="form-group">
            <label for="nom">Nom :</label>
            <input type="text" id="nom" name="nom" value="{{data.nom}}" required>
        </div>

        <div class="form-group">
            <label for="description">Description :</label>
            <textarea id="description" name="description" rows="4">{{data.description}}</textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Créer</button>
            <a href="/departements" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>