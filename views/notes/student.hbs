<div class="student-notes-page">
    <div class="page-header">
        <h1>üéØ Mes Notes</h1>
        {{#if etudiant}}
        <p class="page-subtitle">{{etudiant.prenom}} {{etudiant.nom}} - CIN: {{etudiant.cin}}</p>
        {{/if}}
    </div>

    {{#if missingProfile}}
    <div class="alert alert-warning">
        <strong>‚ö†Ô∏è Profil incomplet</strong>
        <p>Votre profil √©tudiant n'a pas √©t√© trouv√©. Veuillez contacter l'administration.</p>
    </div>
    {{else}}

    <!-- Filtres -->
    <div class="filters-bar">
        <form method="GET" class="filter-form">
            <select name="semestre" onchange="this.form.submit()">
                <option value="1" {{#if (eq semestre '1')}}selected{{/if}}>Semestre 1</option>
                <option value="2" {{#if (eq semestre '2')}}selected{{/if}}>Semestre 2</option>
            </select>
            
            <select name="annee" onchange="this.form.submit()">
                <option value="2025-2026" {{#if (eq annee '2025-2026')}}selected{{/if}}>2025-2026</option>
                <option value="2024-2025" {{#if (eq annee '2024-2025')}}selected{{/if}}>2024-2025</option>
                <option value="2023-2024" {{#if (eq annee '2023-2024')}}selected{{/if}}>2023-2024</option>
            </select>
        </form>
    </div>

    <!-- Moyenne g√©n√©rale -->
    {{#if bulletin.length}}
    <div class="moyenne-generale-card">
        <div class="moyenne-icon">üèÜ</div>
        <div class="moyenne-content">
            <div class="moyenne-label">Moyenne G√©n√©rale</div>
            <div class="moyenne-value">{{moyenneGenerale}}/20</div>
        </div>
        <div class="moyenne-badge {{#if (math moyenneGenerale 10)}}badge-success{{else}}badge-danger{{/if}}">
            {{#if (math moyenneGenerale 10)}}‚úì Admis{{else}}‚úó Non admis{{/if}}
        </div>
    </div>
    {{/if}}

    <!-- Bulletin par cours -->
    {{#if bulletin.length}}
    <div class="bulletin-container">
        {{#each bulletin}}
        <div class="cours-card">
            <div class="cours-header">
                <h3>üìö {{cours_titre}}</h3>
                <div class="cours-moyenne {{#if (math moyenne 10)}}moyenne-success{{else}}moyenne-danger{{/if}}">
                    {{moyenne}}/20
                </div>
            </div>
            
            <div class="cours-body">
                <div class="cours-info">
                    <span class="info-badge">{{nombre_evaluations}} √©valuation(s)</span>
                </div>
                
                {{#if details_notes}}
                <div class="notes-details">
                    <strong>D√©tails:</strong>
                    <div class="details-text">{{details_notes}}</div>
                </div>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="empty-state">
        <div class="empty-icon">üìù</div>
        <h3>Aucune note disponible</h3>
        <p>Aucune note n'a √©t√© saisie pour ce semestre.</p>
    </div>
    {{/if}}

    {{/if}}
</div>

<style>
